<form action="/Product/saveEdit" method="get">
    <input type="hidden" name="ProductId" value="@Model.ProductId">
    <div class="form-group">
        <label>Product Name:</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name">
    </div>
    <br>
    <div class="form-group">
        <label>Product Description:</label>
        <input type="text" class="form-control" name="Description" value="@Model.Description">
    </div>
    <div class="form-group">
        <label>Product Img:</label>
        <input type="text" class="form-control" name="Img" value="@Model.Img">
    </div>
    <div class="form-group">
        <label>Product Price:</label>
        <input type="text" class="form-control" name="Price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label>Product Rate:</label>
        <input type="text" class="form-control" name="Rate" value="@Model.Rate">
    </div>
    <div class="form-group">
        <label>CateogryId:</label>
        <input type="text" class="form-control" name="CategoryId" value="@Model.CategoryId">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>